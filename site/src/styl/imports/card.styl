.item
    width 100%
    max-width 350px
    padding 30px 10px
    border-top 1px solid #ddd

    .title
        justify-content space-between

        h1
            font-size 2rem

        .difficulty
            height 30px
            width 30px
            border-radius 50%

            &.easy
                background green
            
            &.medium
                background orange
            
            &.hard
                background red

    p
        font-size 1.2rem
        line-height 1.4
        color #222

        &.swag
            margin 5px 0 10px 0
            color #444

        &.description
            margin 10px 0

    a
        color #444
        text-decoration none
        border-bottom 2px solid #444

    img
        width 100%
        height auto
        user-drag none
        -webkit-user-drag none