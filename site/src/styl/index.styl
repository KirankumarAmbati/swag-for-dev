@require "imports/base"

.container
    min-height 100vh
    width 100vw

section.main
    width 100%
    margin 0 auto

    .heading
        flex-direction column
        height 40vh
        text-align center

        h1
            font-size 3rem
            color #111
            width 90%
        
        p
            font-size 1.2rem
            color #555
            margin-top 20px
            width 90%

    .buttons
        width 90%
        margin 0 auto
        flex-wrap wrap
        justify-content flex-start
        border-bottom 1px solid #ddd
        padding-bottom 15px
        max-width 1100px

        .item
            padding 5px

        label
            margin 0 10px 0 0
        

    .content
        max-width 1100px
        flex-wrap wrap
        width 90%
        align-items flex-start
        justify-content space-between
        margin 0 auto

        @import "imports/card"